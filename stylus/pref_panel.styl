.c-pref-panel
  max-width 800px
  min-width 400px
  color #c5c8c6
  -webkit-font-smoothing antialiased

  h1
    font-size 30px
    font-weight normal
    border-bottom 2px solid #c5c8c6

    i::before
      font-size 32px
      margin-right 10px

  h2
    font-weight bold
    font-size 16px

    i::before
      margin-right 10px

  label
    display block
    margin-bottom 20px
    font-size 16px

  input
    box-sizing border-box
    width 100%
    padding 5px
    margin-top 5px
    border none
    border-radius 2px
    font-size 16px
    font-family inherit
    outline none

  button
    font-size 16px
    border none
    border-radius 2px
    outline none
