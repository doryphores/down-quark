.o-pref-panel
  width 50%
  min-width 500px
  padding 20px 40px
  -webkit-font-smoothing antialiased

  h2
    font-weight bold
    font-size 1.8rem

    i::before
      font-size 24px
      margin-right 10px

.o-form__text-input
  display block
  box-sizing border-box
  width 100%
  max-width 400px
  padding 5px
  margin-top 5px
  border none
  font-size 1.6rem
  font-family inherit
  outline none

.o-form__label
  display block
  margin-bottom 20px
  font-size 1.6rem
  font-weight bold

.o-form__radio
  font-size 1.6rem
  margin-right 20px

  input
    position relative
    top -2px
    margin-right 10px

// User card
// TODO: maybe move this to a separate partial

.o-user-card
  position relative
  min-height 40px
  margin 20px 0
  padding-left 50px

.o-user-card__name
  margin 0
  font-size 16px

.o-user-card__username
  margin 0
  font-size 14px

.o-user-card__avatar
  position absolute
  left 0
  top 0
  width 40px
  height 40px
