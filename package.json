{
  "name": "down-quark",
  "version": "0.0.1",
  "description": "Electron based markdown editor",
  "main": "index.js",
  "scripts": {
    "install-deps": "npm install && electron-rebuild",
    "start": "npm run build-css && npm run build-js && electron .",
    "package": "npm run build-css && npm run build-js && node scripts/package.js",
    "build-js": "mkdirp static/js && babel src --out-dir static/js --stage 0",
    "watch-js": "mkdirp static/js && babel src --out-dir static/js -w --stage 0",
    "build-css": "mkdirp static/css && stylus stylus/app.styl -o static/css/ -c",
    "watch-css": "mkdirp static/css && stylus stylus/app.styl -o static/css/ -w",
    "watch": "npm run build-css -- -m && npm run build-js -- -s && (npm run watch-css -- -m & npm run watch-js -- -s & electron .)"
  },
  "author": "Martin Laine",
  "repository": {
    "type": "git",
    "url": "https://github.com/doryphores/down-quark"
  },
  "license": "ISC",
  "devDependencies": {
    "electron-packager": "^5.0.2",
    "electron-prebuilt": "0.30.6",
    "electron-rebuild": "^0.2.5",
    "stylus": "^0.52.0",
    "babel": "^5.8.21",
    "mkdirp": "^0.5.1"
  },
  "dependencies": {
    "alt": "^0.17.1",
    "classnames": "^2.1.3",
    "codemirror": "^5.6.0",
    "fs-extra": "^0.23.1",
    "immutable": "^3.7.4",
    "pathwatcher": "^5.0.0",
    "react": "^0.13.3",
    "showdown": "^1.2.2",
    "underscore": "^1.8.3"
  }
}
