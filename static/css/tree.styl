.c-tree
  position relative
  z-index 2
  height 100%
  width 300px
  min-width 200px
  max-width 50%
  background-color #dedede
  font-size 1.2rem
  line-height 1.8
  font-weight bold
  -webkit-user-select none

.c-tree__resizer
  position absolute
  top 0
  bottom 0
  right -5px
  width 5px
  cursor col-resize

.c-tree__scroller
  overflow auto
  position absolute
  top 0
  right 0
  bottom 0
  left 0

.c-tree__node-list
  min-width -webkit-min-content
  list-style none
  margin 0
  padding 10px

  // Collapse child node lists
  .c-tree__node-list
    min-width 0
    display none
    padding 0

  .c-tree__node--expanded > &
    display block

.c-tree__node
  white-space nowrap

  &::before
    width 16px
    margin-right 8px

  .c-tree__node
    padding-left 20px

.c-tree__node-label
  cursor default
